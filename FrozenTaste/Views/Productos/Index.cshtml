@model IEnumerable<FrozenTaste.Models.Productos>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Producto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Producto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Producto }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Producto }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Producto }, new { @class = "btn btn-danger" }) 
        </td>
    </tr>
}

</table>
